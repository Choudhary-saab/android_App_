<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="#2848F0" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#2848F0" />

    <!-- Corners: Top straight, Bottom rounded -->
    <corners
        android:topLeftRadius="0dp"
        android:topRightRadius="0dp"
        android:bottomLeftRadius="55dp"
        android:bottomRightRadius="55dp" />

    <!-- Optional padding -->
    <padding
        android:left="10dp"
        android:top="8dp"
        android:right="10dp"
        android:bottom="8dp" />
</shape>
