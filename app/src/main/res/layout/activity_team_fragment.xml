<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeamFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="207dp"
            android:background="#4858f0"
            android:orientation="vertical"
            android:gravity="center"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/stc_logo"
                android:background="@drawable/circle_light"
                android:contentDescription="New Icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social Technocrats"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:text="Empowering College life through innovation and events"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="414dp"
            android:background="@drawable/rounded_layout"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:elevation="4dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_eye"
                android:padding="5dp"
                android:background="@drawable/circle_blue"
                android:contentDescription="New Icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Vision"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="6dp" />

            <TextView
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:text="To create an innovative ecosystem that bridges technology and creativity, fostering student engagement and excellence in college life."
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#737373"
                android:layout_marginTop="8dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_target"
                android:layout_marginTop="50dp"
                android:padding="8dp"
                android:background="@drawable/circle_green"
                android:contentDescription="New Icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Mission"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="6dp" />

            <TextView
                android:layout_width="300sp"
                android:layout_height="100dp"
                android:text="To organize impactful events, develop technical skills, and build a vibrant community that empowers every student to achieve their potential."
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#737373"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Team Statistics"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_layout"
            android:weightSum="3"
            android:padding="8dp">

            <!-- 1st column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50+"
                    android:textColor="#0829E0"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Members"
                    android:textColor="#737373"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 2nd column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25+"
                    android:textColor="#0FC516"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Events"
                    android:textColor="#737373"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 3rd column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="#834EE0"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clubs"
                    android:textColor="#737373"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/btn_background"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:layout_width="300dp"
                android:layout_height="30sp"
                android:textSize="25sp"
                android:text="Join Our Team!"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:layout_width="350sp"
                android:layout_height="70sp"
                android:text="Be a part of something amazing. Applications are now open for all Clubs"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply Now"
                android:background="@drawable/rounded_layout"
                android:textColor="#4858F0"
                />

        </LinearLayout>




    </LinearLayout>

</ScrollView>